<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/stylesheets/admin_style.css">
    <title>Admin Dashboard</title>
  </head>
  <body>
    <header>
      <h1>Admin Dashboard</h1>
      <nav>
        <a href="settings.html">Settings</a>
        <a href="template.html">Logout</a>
      </nav>
    </header>

    <div id="page_options">
      <form>
        <h2>Page Options</h2>

          <label>Title:</label>
          <p><input type="text" name="title" value="" required></p>
          <label>Main Content:</label>
          <p><textarea name="main_content" cols="65" rows="10"></textarea></p>
          <label>URL:</label>
          <p><input type="text" name="url" value="" required></p>
          <label>Template:</label>
          <p>
            <select id="template_selector">
              <option value="none" disabled selected>---</option>
              <option value="Blue">Blue</option>
              <option value="Green">Green</option>
              <option value="Red">Red</option>
            </select>
          </p>

          <button type="submit" name="Save">Save</button>
      </form>
    </div>

