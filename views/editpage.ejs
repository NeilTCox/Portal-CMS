<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/stylesheets/admin_style.css">
    <title>Admin Dashboard</title>
  </head>
  <body>
    <header>
      <h1>Admin Dashboard</h1>
      <nav>
        <a href="/admin/settings">Settings</a>
        <a href="/admin/logout">Logout</a>
      </nav>
    </header>

    <div id="page_options">
      <form method="post" action="/admin/editpage/<%= _id %>">
        <h2>Page Options</h2>

          <label>Title:</label>
          <p><input type="text" name="title" value=<%= title %> required></p>
          <label>Main Content:</label>
          <p><textarea name="main_content" cols="65" rows="10"><%= main_content %></textarea></p>
          <% if(typeof urlError !== 'undefined'){ %>
            <div class="url-error">
              <h3><%= urlError %></h3>
            </div>
          <% } %>
          <label>URL:</label>
          <p><input type="text" name="url" value="<%= url %>" required></p>
          <label>Visible?</label>
          <p><input type="checkbox" name="visible" <%= visible %>></p>
          <label>Template:</label>
          <p>
            <select id="template_selector" name="template">
              <option value="none" disabled>---</option>
              <option value="Blue" <%= blue_selected %>>Blue</option>
              <option value="Green"<%= green_selected %>>Green</option>
              <option value="Red" <%= red_selected %>>Red</option>
            </select>
          </p>

          <button type="submit" name="Save">Save</button>
      </form>
    </div>

<% include includes/footer.ejs %>
